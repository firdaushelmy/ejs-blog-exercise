<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="titleID">Title</label>
    <input
      type="text"
      class="form-control"
      id="titleID"
      name="postTitle"
      row="1"
    />
  </div>
  <div class="form-group">
    <label for="postID">Post</label>
    <textarea
      class="form-control"
      id="postID"
      name="postBody"
      rows="3"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary" value="submitForm">
    Publish
  </button>
</form>

<%- include('partials/footer') -%>
